@page
@model Universite.Pages.Enseignants.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Enseignant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Enseignant.ID" />
            <div class="form-group">
                <label asp-for="Enseignant.Nom" class="control-label"></label>
                <input asp-for="Enseignant.Nom" class="form-control" />
                <span asp-validation-for="Enseignant.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enseignant.Prenom" class="control-label"></label>
                <input asp-for="Enseignant.Prenom" class="form-control" />
                <span asp-validation-for="Enseignant.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div>
                    <table>
                        @{
                            foreach (var CheckData in Model.LesCheckEnseigne)
                            {
                                @:<tr>
                                    @:<td>
                                        <input type="checkbox"
                                               name="selectedUE"
                                               value="@CheckData.UEID"
                                               @(Html.Raw(CheckData.IsCheck ? "checked=\"checked\"" : "")) />
                                        @CheckData.NomComplet
                                    @: </td>
                                @: </tr>
                            }
                        }
                    </table>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
