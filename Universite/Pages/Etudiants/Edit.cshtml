@page
@model Universite.EditModel
@using Universite.Models

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Etudiant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Etudiant.ID" />
            <div class="form-group">
                <label asp-for="Etudiant.Nom" class="control-label"></label>
                <input asp-for="Etudiant.Nom" class="form-control" />
                <span asp-validation-for="Etudiant.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Prenom" class="control-label"></label>
                <input asp-for="Etudiant.Prenom" class="form-control" />
                <span asp-validation-for="Etudiant.Prenom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Naissance" class="control-label"></label>
                <input asp-for="Etudiant.Naissance" class="form-control" />
                <span asp-validation-for="Etudiant.Naissance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.Genre" class="control-label"></label>
                <select asp-for="Etudiant.Genre" asp-items="Html.GetEnumSelectList<Etudiant.EnumGenre>()" class="form-control"></select>
                <span asp-validation-for="Etudiant.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Etudiant.FormationID" class="control-label"></label>
                <select asp-for="Etudiant.FormationID" class="form-control" asp-items="ViewBag.FormationID"></select>
                <span asp-validation-for="Etudiant.FormationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
